{
  "manifest_version": 3,
  "name": "Page Reader Assistant",
  "version": "1.0",
  "description": "Ask questions about the current webpage content",
  "permissions": [
    "storage",
    "scripting",
    "tabs",
    "activeTab",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_icon": {
      "128": "icons/icon128.png"
    },
    "default_popup": "settings.html"
  },
  "icons": {
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["sidebar.css"],
      "js": ["lib/marked.min.js","src/main.js"],
      "type": "module"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "settings.css",
        "src/*.js",
        "src/*/*.js",
        "src/*/*/*.js"
      ],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["histories/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
