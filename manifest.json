{
  "manifest_version": 3,
  "name": "Page Reader Assistant",
  "version": "1.0",
  "description": "Ask questions about the current webpage content",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_icon": {
      "128": "icons/icon128.png"
    },
    "default_popup": "settings.html"
  },
  "icons": {
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["sidebar.css"],
      "js": ["lib/marked.min.js", "sidebar.js"]
    }
  ]
} 